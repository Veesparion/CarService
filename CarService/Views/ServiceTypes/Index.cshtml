@model IEnumerable<CarService.Models.ServiceType>

@{
    ViewData["Title"] = "Index";
}

<h2>Manage Service Types</h2>
<hr />
<a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>

<table class="table table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Name)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.Partial("_TableButtonPartial", new ButtonsPartialModel { ServiceId = item.Id })
            </td>
        </tr>

    }
</table>